---
import Layout from './Layout.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<Layout title={title} description={description}>
  <div class="container section text-layout-container">
    <article class="text-content mx-auto">
      <header class="header-spacing text-center">
        <h1 class="text-display text-primary">{title}</h1>
        <div class="h-1 w-24 bg-secondary mx-auto mt-8 rounded-full"></div>
      </header>
      
      <div class="prose">
        <slot />
      </div>
    </article>
  </div>
</Layout>

<style>
  .text-layout-container {
    padding-top: var(--space-4xl);
    padding-bottom: var(--space-4xl);
    padding-left: var(--space-xl);
    padding-right: var(--space-xl);
  }

  .text-content {
    max-width: 850px; /* Slightly wider for better line lengths */
  }

  .header-spacing {
    margin-bottom: 5rem;
  }

  .prose {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-gray-700);
  }

  /* Global styles for content within the prose class */
  .prose :global(h2) {
    font-family: var(--font-display);
    font-size: 2rem; /* Slightly larger */
    font-weight: 700;
    color: var(--color-primary);
    margin-top: 4.5rem; /* Significantly more space */
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-gray-200);
  }

  .prose :global(h3) {
    font-family: var(--font-display);
    font-size: 1.625rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-top: 3.5rem; /* More space */
    margin-bottom: 1.25rem;
  }

  .prose :global(p) {
    margin-bottom: 1.75rem; /* More breathing room between paragraphs */
  }

  .prose :global(ul) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
    list-style-type: disc;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
  }

  .prose :global(strong) {
    color: var(--color-primary-dark);
    font-weight: 600;
  }

  .prose :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
    text-underline-offset: 4px;
    transition: color 0.2s ease;
  }

  .prose :global(a:hover) {
    color: var(--color-secondary-dark);
  }

  .prose :global(.lead) {
    font-size: 1.375rem; /* Slightly larger */
    font-weight: 500;
    line-height: 1.6;
    color: var(--color-primary);
    margin-bottom: 3.5rem; /* More space after lead */
  }
</style>
