---
interface Props {
  title?: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
}

const {
  title = 'Mandos a distancia de calidad al mejor precio',
  subtitle = 'Descubre nuestra selección de controles remotos. Compra con confianza en plataformas seguras.',
  ctaText = 'Ver Catálogo',
  ctaHref = '/products/'
} = Astro.props;
---

<section class="hero">
  <div class="hero-bg">
    <img 
      src="/hero.webp" 
      alt="Mandos a distancia verificados Octopus Control" 
      class="hero-image"
      loading="eager"
      fetchpriority="high"
    />
    <div class="hero-overlay"></div>
    <div class="hero-particles"></div>
  </div>
  
  <div class="hero-content container">
    <div class="hero-text">
      <span class="hero-badge animate-fadeIn">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
        </svg>
        Poner pilas y listo
      </span>
      
      <h1 class="hero-title animate-fadeInUp">
        <span class="title-line">{title.split(' ').slice(0, 3).join(' ')}</span>
        <span class="title-highlight">{title.split(' ').slice(3).join(' ')}</span>
      </h1>
      
      <p class="hero-subtitle animate-fadeInUp delay-200">
        {subtitle}
      </p>
      
      <div class="hero-cta animate-fadeInUp delay-300">
        <a href={ctaHref} class="btn btn-primary btn-lg">
          {ctaText}
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
      
      <div class="hero-platforms animate-fadeInUp delay-400">
        <span class="platforms-label">Disponible en:</span>
        <div class="platforms-icons">
          <a 
            href="https://es.wallapop.com/user/oliverm-441214038"
            target="_blank"
            rel="noopener noreferrer"
            class="platform-icon wallapop"
            aria-label="Wallapop"
          >
            <img src="/wallapop.svg" alt="Wallapop" class="platform-img" />
          </a>
          <a 
            href="https://www.vinted.es/member/237495534"
            target="_blank"
            rel="noopener noreferrer"
            class="platform-icon vinted"
            aria-label="Vinted"
          >
            <img src="/vinted.svg" alt="Vinted" class="platform-img" />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    min-height: 100dvh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }
  
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: -1;
  }
  
  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(3, 55, 70, 0.85) 0%,
      rgba(3, 55, 70, 0.6) 40%,
      rgba(5, 85, 112, 0.7) 100%
    );
  }
  
  .hero-particles {
    position: absolute;
    inset: 0;
    background-image: 
      radial-gradient(circle at 20% 30%, rgba(182, 219, 225, 0.3) 0%, transparent 25%),
      radial-gradient(circle at 80% 70%, rgba(182, 219, 225, 0.2) 0%, transparent 30%),
      radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
    animation: float 6s ease-in-out infinite;
  }
  
  .hero-content {
    padding-top: 100px;
    padding-bottom: var(--space-4xl);
  }
  
  .hero-text {
    max-width: 700px;
  }
  
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-sm) var(--space-md);
    background: rgba(182, 219, 225, 0.2);
    border: 1px solid rgba(182, 219, 225, 0.3);
    border-radius: var(--radius-full);
    color: var(--color-secondary);
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: var(--space-xl);
    backdrop-filter: blur(10px);
  }
  
  .hero-title {
    color: var(--color-white);
    margin-bottom: var(--space-lg);
  }
  
  .title-line {
    display: block;
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 800;
    line-height: 1.1;
  }
  
  .title-highlight {
    display: block;
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 800;
    line-height: 1.1;
    background: linear-gradient(135deg, var(--color-secondary) 0%, #fff 50%, var(--color-secondary) 100%);
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: shimmer 3s linear infinite;
  }
  
  .hero-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.7;
    margin-bottom: var(--space-xl);
    max-width: 550px;
  }
  
  .hero-cta {
    margin-bottom: var(--space-2xl);
  }
  
  .hero-platforms {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }
  
  .platforms-label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
  }
  
  .platforms-icons {
    display: flex;
    gap: var(--space-sm);
  }
  
  .platform-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 35px;
    height: 35px;
    border-radius: var(--radius-full);
    transition: all var(--transition-base);
    padding: 8px;
  }
  
  .platform-icon.wallapop {
    background: var(--color-wallapop);
    box-shadow: 0 4px 12px rgba(61, 210, 186, 0.4);
  }
  
  .platform-icon.vinted {
    background: var(--color-vinted);
    box-shadow: 0 4px 12px rgba(0, 119, 130, 0.4);
  }
  
  .platform-icon:hover {
    transform: scale(1.1);
  }
  
  .platform-icon.wallapop:hover {
    box-shadow: 0 6px 20px rgba(61, 210, 186, 0.6);
  }
  
  .platform-icon.vinted:hover {
    box-shadow: 0 6px 20px rgba(0, 119, 130, 0.6);
  }
  
  .platform-icon img,
  .platform-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: brightness(0) invert(1);
  }
  

  @media (min-width: 768px) {
    .hero-content {
      padding-top: 120px;
    }
    
    .hero-badge {
      margin-bottom: var(--space-2xl);
    }
    
    .hero-platforms {
      gap: var(--space-lg);
    }
    
    .platform-icon {
      width: 44px;
      height: 44px;
    }
  }
</style>
