<script>
  document.addEventListener('DOMContentLoaded', () => {
    let categoryPills = document.querySelectorAll('#category-pills .pill');
    const sortButtons = document.querySelectorAll('#sort-options .sort-btn');
    const resetBtn = document.getElementById('reset-filters');
    const toggleBtn = document.getElementById('toggle-filters');
    const filterHeader = document.getElementById('filter-header');
    const filterContent = document.getElementById('filter-content');
    const productGrid = document.getElementById('product-grid');
    const categoryPillsContainer = document.getElementById('category-pills');
    const fadeLeft = document.getElementById('fade-left');
    const fadeRight = document.getElementById('fade-right');
    const scrollIndicator = document.getElementById('scroll-indicator');
    const scrollLeftBtn = document.getElementById('scroll-left');
    const scrollRightBtn = document.getElementById('scroll-right');
    
    if (!productGrid) return;
    
    let currentCategory = 'all';
    let currentSort = 'default';
    
    // Toggle logic
    toggleBtn?.addEventListener('click', () => {
      const isCollapsed = filterContent?.classList.contains('collapsed');
      
      if (isCollapsed) {
        filterContent?.classList.remove('collapsed');
        filterHeader?.classList.remove('is-collapsed');
        toggleBtn.setAttribute('aria-label', 'Contraer filtros');
        
        // Refresh scroll indicators after animation
        setTimeout(updateScrollIndicators, 400);
      } else {
        filterContent?.classList.add('collapsed');
        filterHeader?.classList.add('is-collapsed');
        toggleBtn.setAttribute('aria-label', 'Expandir filtros');
      }
    });

    // Also toggle when clicking header title/icon area
    filterHeader?.addEventListener('click', (e) => {
      if ((e.target as HTMLElement).closest('.header-actions')) return;
      toggleBtn?.click();
    });
    
    // Get all product cards
    const getAllProducts = () => {
      return Array.from(productGrid.querySelectorAll('.product-card-wrapper'));
    };
    
    // Update category counts and reorder pills by count
    const updateCategoryCounts = () => {
      const products = getAllProducts();
      const counts = { all: products.length };
      
      products.forEach(product => {
        const category = product.dataset.category || '';
        if (category) {
          counts[category] = (counts[category] || 0) + 1;
        }
      });
      
      // Update count badges
      document.querySelectorAll('.pill-count').forEach(badge => {
        const category = badge.dataset.count;
        const count = counts[category] || 0;
        badge.textContent = count > 0 ? count.toString() : '';
      });
      
      // Sort pills by count (except "Todos" which stays first)
      if (categoryPillsContainer) {
        const pills = Array.from(categoryPillsContainer.querySelectorAll('.pill'));
        const todosPill = pills.find(p => p.dataset.category === 'all');
        const otherPills = pills.filter(p => p.dataset.category !== 'all');
        
        // Sort by count descending
        otherPills.sort((a, b) => {
          const countA = counts[a.dataset.category] || 0;
          const countB = counts[b.dataset.category] || 0;
          return countB - countA;
        });
        
        // Reorder in DOM
        if (todosPill) {
          categoryPillsContainer.appendChild(todosPill);
        }
        otherPills.forEach(pill => {
          categoryPillsContainer.appendChild(pill);
        });
        
        // Refresh pill references
        categoryPills = document.querySelectorAll('#category-pills .pill');
        
        // Re-attach click handlers
        categoryPills.forEach(pill => {
          pill.addEventListener('click', (e) => {
            e.stopPropagation(); // Prevent header toggle
            categoryPills.forEach(p => p.classList.remove('active'));
            pill.classList.add('active');
            currentCategory = pill.dataset.category || 'all';
            pill.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
            updateProducts();
          });
        });
      }
    };
    
    // Update scroll fade indicators and nav buttons
    const updateScrollIndicators = () => {
      if (!categoryPillsContainer) return;
      
      const { scrollLeft, scrollWidth, clientWidth } = categoryPillsContainer;
      const maxScroll = scrollWidth - clientWidth;
      const hasOverflow = scrollWidth > clientWidth + 5;
      
      // Show/hide left fade and button
      const canScrollLeft = scrollLeft > 10;
      if (fadeLeft) fadeLeft.classList.toggle('visible', canScrollLeft);
      if (scrollLeftBtn) scrollLeftBtn.classList.toggle('visible', hasOverflow && canScrollLeft);
      
      // Show/hide right fade and button
      const canScrollRight = scrollLeft < maxScroll - 10;
      if (fadeRight) fadeRight.classList.toggle('visible', canScrollRight);
      if (scrollRightBtn) scrollRightBtn.classList.toggle('visible', hasOverflow && canScrollRight);
      
      // Hide scroll indicator when scrolled or no overflow
      if (scrollIndicator) {
        const hasScrolled = scrollLeft > 20;
        scrollIndicator.classList.toggle('hidden', !hasOverflow || hasScrolled);
      }
    };
    
    // Scroll navigation handlers
    const scrollAmount = 200;
    
    scrollLeftBtn?.addEventListener('click', (e) => {
      e.stopPropagation();
      categoryPillsContainer?.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
    });
    
    scrollRightBtn?.addEventListener('click', (e) => {
      e.stopPropagation();
      categoryPillsContainer?.scrollBy({ left: scrollAmount, behavior: 'smooth' });
    });
    
    // Add scroll listener
    if (categoryPillsContainer) {
      categoryPillsContainer.addEventListener('scroll', updateScrollIndicators);
      setTimeout(updateScrollIndicators, 100);
      window.addEventListener('resize', updateScrollIndicators);
    }
    
    // Filter and sort products
    const updateProducts = () => {
      const products = getAllProducts();
      
      // Add stagger animation on filter change
      let visibleIndex = 0;
      
      products.forEach(product => {
        const category = product.dataset.category || '';
        const matchesCategory = currentCategory === 'all' || category === currentCategory;
        
        if (matchesCategory) {
          product.style.display = '';
          product.style.animationDelay = `${visibleIndex * 0.05}s`;
          visibleIndex++;
        } else {
          product.style.display = 'none';
        }
      });
      
      // Sort visible products
      const visibleProducts = products.filter(p => p.style.display !== 'none');
      
      visibleProducts.sort((a, b) => {
        const priceA = parseFloat(a.dataset.price || '0');
        const priceB = parseFloat(b.dataset.price || '0');
        const featuredA = a.dataset.featured === 'true' ? 1 : 0;
        const featuredB = b.dataset.featured === 'true' ? 1 : 0;
        
        switch (currentSort) {
          case 'price-asc':
            return priceA - priceB;
          case 'price-desc':
            return priceB - priceA;
          default: // Featured first (A-Z), then non-featured (Z-A)
            if (featuredA !== featuredB) return featuredB - featuredA;
            if (featuredA) {
              return titleA.localeCompare(titleB, 'es');
            } else {
              return titleB.localeCompare(titleA, 'es');
            }
        }
      });
      
      // Reorder in DOM
      visibleProducts.forEach(product => {
        productGrid.appendChild(product);
      });
      
      // Update empty state
      const emptyState = document.getElementById('empty-state');
      if (emptyState) {
        emptyState.style.display = visibleProducts.length === 0 ? 'block' : 'none';
      }
    };
    
    // Sort handlers
    sortButtons.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        sortButtons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        currentSort = btn.dataset.sort || 'default';
        updateProducts();
      });
    });
    
    // Reset handler
    resetBtn?.addEventListener('click', (e) => {
      e.stopPropagation();
      categoryPills.forEach(p => p.classList.remove('active'));
      categoryPills[0]?.classList.add('active');
      
      sortButtons.forEach(b => b.classList.remove('active'));
      sortButtons[0]?.classList.add('active');
      
      currentCategory = 'all';
      currentSort = 'default';
      
      // Scroll back to start
      if (categoryPillsContainer) {
        categoryPillsContainer.scrollTo({ left: 0, behavior: 'smooth' });
      }
      
      updateProducts();
    });
    
    // Initialize counts
    updateCategoryCounts();
  });
</script>
